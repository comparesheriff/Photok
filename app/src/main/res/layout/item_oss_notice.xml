<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_gap"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/small_gap">

        <LinearLayout
            android:id="@+id/itemOssGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemOssProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="TITLE" />

            <TextView
                android:id="@+id/itemOssVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="version"
                android:textColor="@color/secondaryTextColor" />

            <TextView
                android:id="@+id/itemOssPackageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="packageName"
                android:textColor="@color/secondaryTextColor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemOssDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/small_gap"
                android:layout_marginBottom="@dimen/small_gap"
                android:src="@color/secondaryTextColor" />

            <TextView
                android:id="@+id/itemOssLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="license"
                android:textColor="@color/secondaryTextColor" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>